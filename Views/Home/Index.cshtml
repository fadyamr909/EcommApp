@{
    ViewData["Title"] = "Home";
    var username = Context.Session.GetString("Username");
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Welcome to EcommerceApp</h1>
                <p style="font-size: 20px; margin-bottom: 30px;">Discover amazing products at great prices</p>
                
                @if (string.IsNullOrEmpty(username))
                {
                    <div class="d-flex gap-3 justify-content-center flex-wrap mb-4">
                        <a href="/Auth/Login" class="btn btn-primary" style="font-size: 18px; padding: 15px 40px;">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a href="/Auth/Register" class="btn btn-outline-primary" style="font-size: 18px; padding: 15px 40px;">
                            <i class="bi bi-person-plus"></i> Sign Up
                        </a>
                    </div>
                }
                else
                {
                    <p class="mb-4" style="font-size: 18px;">
                        Welcome back, <strong>@username</strong>!
                    </p>
                }
                
                <a asp-controller="Store" asp-action="Index" class="primary-btn" style="font-size: 18px; padding: 15px 40px;">
                    Shop Now
                </a>
            </div>
        </div>
    </div>
</section>
