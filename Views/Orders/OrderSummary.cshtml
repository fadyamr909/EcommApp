@model ECommerceApp.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card">
            <div style="background-color: var(--emerald-500); color: white; padding: 3rem 1.5rem; text-align: center;">
                <i class="bi bi-check-circle" style="font-size: 3rem; display: block; margin-bottom: 1rem;"></i>
                <h1 style="font-size: 1.875rem; font-weight: 700; margin-bottom: 0.5rem;">Order Confirmed!</h1>
                <p style="font-size: 1.125rem; opacity: 0.9; margin: 0;">Thank you for your order</p>
            </div>

            <div class="card-body" style="padding: 1.5rem;">
                <div class="alert alert-success mb-4">
                    <p style="font-weight: 600; margin-bottom: 0.5rem;">Your order has been placed successfully!</p>
                    <p style="font-size: 0.875rem; margin-bottom: 0.25rem;">
                        Order ID: <span style="font-weight: 700;">#@Model.Id</span>
                    </p>
                    <p style="font-size: 0.875rem; margin: 0;">
                        Order Date: <span style="font-weight: 700;">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</span>
                    </p>
                </div>

                <div class="mb-4">
                    <h2 style="font-weight: 700; color: var(--foreground); margin-bottom: 0.75rem;">Order Items</h2>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td style="color: var(--foreground);">@item.ProductName</td>
                                        <td style="color: #2F429E;">@item.PriceAtPurchase.ToString("C")</td>
                                        <td style="color: var(--foreground);">@item.Quantity</td>
                                        <td style="font-weight: 700; color: var(--foreground);">@item.Subtotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div style="border-top: 1px solid var(--border); padding-top: 1rem; margin-top: 1rem;">
                    <div class="order-summary-row">
                        <span style="color: var(--muted-foreground);">Subtotal:</span>
                        <span style="font-weight: 600; color: var(--foreground);">@Model.Subtotal.ToString("C")</span>
                    </div>
                    <div class="order-summary-row">
                        <span style="color: var(--muted-foreground);">Tax (10%):</span>
                        <span style="font-weight: 600; color: var(--foreground);">@Model.Tax.ToString("C")</span>
                    </div>
                    <div class="order-summary-total">
                        <span class="order-summary-total-label">Total:</span>
                        <span class="order-summary-total-amount">@Model.TotalAmount.ToString("C")</span>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-controller="Store" asp-action="Index" class="btn btn-primary w-100" style="padding: 0.75rem;">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

