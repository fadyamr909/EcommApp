@model IEnumerable<ECommerceApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="page-header">
    <h1 style="font-size: 1.875rem;">Products</h1>
    <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center gap-2">
        <i class="bi bi-plus"></i> Create New
    </a>
</div>

<div class="card">
    <div class="card-body" style="padding: 0;">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: 600; color: var(--foreground);">@item.Name</td>
                            <td style="color: var(--foreground); font-size: 0.875rem;">@item.Description</td>
                            <td style="font-weight: 600; color: #2F429E;">@item.Price.ToString("C")</td>
                            <td>
                                <span style="background-color: var(--primary-50); color: var(--primary); padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; display: inline-block;">@item.Category</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <div class="image-container" style="width: 40px; height: 40px; border-radius: var(--radius-md); overflow: hidden;">
                                        <img src="@item.ImageUrl" alt="@item.Name" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex align-items-center justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link p-0" style="color: #ca8a04;" aria-label="Edit product">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link p-0" style="color: var(--destructive);" aria-label="Delete product">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
