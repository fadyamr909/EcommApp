@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<a asp-action="Index" class="d-inline-flex align-items-center gap-2 text-decoration-none mb-4" style="color: var(--primary);">
    <i class="bi bi-arrow-left"></i> Back to Store
</a>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card">
            <div class="image-container" style="aspect-ratio: 1; padding: 1.5rem;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover; border-radius: var(--radius-lg);">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center w-100 h-100">
                        <span style="font-size: 4rem;">ðŸ“¦</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body d-flex flex-column" style="padding: 1.5rem;">
                <div class="mb-3">
                    <span class="category-badge">@Model.Category</span>
                </div>
                <h1 class="mb-3" style="font-size: 2.25rem; font-weight: 700; color: var(--card-foreground);">@Model.Name</h1>
                <p class="mb-4" style="font-size: 1.125rem; font-weight: 700; color: #2F429E;">@Model.Price.ToString("C")</p>
                <p class="mb-4" style="color: var(--card-foreground); line-height: 1.75;">@Model.Description</p>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mb-4">
                        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }
                
                <form asp-action="AddToCart" method="post" class="mt-auto">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <label for="quantity" class="form-label mb-0" style="font-weight: 600;">Quantity:</label>
                        <input type="number" name="quantity" id="quantity" value="1" min="1" max="999" 
                               class="form-control" style="width: 96px; text-align: center;" />
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <button type="submit" class="btn btn-emerald w-100" style="padding: 0.75rem;">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary w-100" style="padding: 0.75rem;">
                            <i class="bi bi-arrow-left"></i> Back to Store
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

